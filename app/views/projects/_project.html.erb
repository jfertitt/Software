
<div class='col-sm-6 col-lg-4'>
    <div class="card">
        <div class="card-topper" style='background-image: url (<%= project.banner_image_url %>);'></div>
        <div class="card-block">
            <h4 class="card-title"><%= link_to project.title, project %> </h4>
            <p class="published-date">Published May 02, 2021 </p>
            <p class="card-text"><%= truncate(project.description, length: 130) %></p>
            <%= link_to 'Read', project, class: 'btn btn-read' %>
        </div>
    </div>
</div>